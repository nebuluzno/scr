<div class="container fade-in">
  <div class="dashboard">
    <div class="dashboard-header">
      <h1>Supervised Cognitive Runtime</h1>
      <p class="subtitle">Multi-agent cognition runtime on BEAM</p>
    </div>
    
    <div class="stats-grid">
      <div class="stat-card">
        <div class="stat-icon">ğŸ‘¥</div>
        <div class="stat-value"><%= @agent_count %></div>
        <div class="stat-label">Active Agents</div>
      </div>
      
      <div class="stat-card">
        <div class="stat-icon">ğŸ’¾</div>
        <div class="stat-value"><%= @cache_stats.size %></div>
        <div class="stat-label">Cached Responses</div>
      </div>
      
      <div class="stat-card">
        <div class="stat-icon">ğŸ“Š</div>
        <div class="stat-value"><%= @metrics_stats.total_calls %></div>
        <div class="stat-label">LLM Calls</div>
      </div>
      
      <div class="stat-card">
        <div class="stat-icon">ğŸ’°</div>
        <div class="stat-value">$<%= :erlang.float_to_binary(@metrics_stats.total_cost, [{:decimals, 4}]) %></div>
        <div class="stat-label">Total Cost</div>
      </div>
    </div>
    
    <div class="dashboard-grid">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">ğŸ¤– Active Agents</h3>
          <a href="/agents" class="btn btn-secondary btn-sm">View All</a>
        </div>
        <div class="card-body">
          <%= if @agents == [] do %>
            <div class="empty-state">
              <div class="empty-state-icon">ğŸ‘»</div>
              <p>No agents running</p>
              <a href="/tasks/new" class="btn btn-primary btn-sm">Start a Task</a>
            </div>
          <% else %>
            <div class="agent-list">
              <%= for agent <- @agents do %>
                <div class="agent-item">
                  <div class="agent-info">
                    <span class="agent-id"><%= agent.agent_id %></span>
                    <span class="agent-type badge badge-info"><%= to_string(Map.get(agent, :agent_type, "unknown")) %></span>
                  </div>
                  <span class={"badge #{if agent.status == :running, do: "badge-success", else: "badge-warning"}"}>
                    <%= if agent.status == :running, do: "â— Running", else: "â—‹ " <> to_string(agent.status) %>
                  </span>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
      
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">ğŸ”§ Quick Tools</h3>
          <a href="/tools" class="btn btn-secondary btn-sm">View All</a>
        </div>
        <div class="card-body">
          <div class="quick-tools">
            <a href="/tools" class="quick-tool-item">
              <span class="tool-icon">ğŸ§®</span>
              <span>Calculator</span>
            </a>
            <a href="/tools" class="quick-tool-item">
              <span class="tool-icon">ğŸŒ¤ï¸</span>
              <span>Weather</span>
            </a>
            <a href="/tools" class="quick-tool-item">
              <span class="tool-icon">ğŸ”</span>
              <span>Search</span>
            </a>
            <a href="/tools" class="quick-tool-item">
              <span class="tool-icon">â°</span>
              <span>Time</span>
            </a>
          </div>
        </div>
      </div>
    </div>
    
    <div class="actions-bar">
      <a href="/tasks/new" class="btn btn-primary">
        <span>â•</span> Submit New Task
      </a>
      <a href="/metrics" class="btn btn-secondary">
        <span>ğŸ“ˆ</span> View Metrics
      </a>
      <a href="/memory" class="btn btn-secondary">
        <span>ğŸ’¾</span> Memory
      </a>
    </div>
  </div>
</div>

<style>
