<div class="container fade-in">
  <div class="page-header">
    <h1>üë• Agents</h1>
    <p class="subtitle">Active agents in the runtime</p>
  </div>
  
  <div class="agents-grid">
    <%= if @agents == [] do %>
      <div class="empty-state card">
        <div class="empty-state-icon">üëª</div>
        <p>No agents running</p>
        <a href="/tasks/new" class="btn btn-primary">Start a Task</a>
      </div>
    <% else %>
      <%= for agent <- @agents do %>
        <a href={"/agents/#{agent.agent_id}"} class="agent-card card">
          <div class="agent-icon">
            <%= case agent.agent_type do
              :planner -> "üéØ"
              :worker -> "‚öôÔ∏è"
              :critic -> "üîç"
              :memory -> "üíæ"
              _ -> "ü§ñ"
            end %>
          </div>
          <div class="agent-content">
            <div class="agent-header">
              <span class="agent-id"><%= agent.agent_id %></span>
              <span class={"badge #{case agent.status do
                :running -> "badge-success"
                :idle -> "badge-info"
                :processing -> "badge-warning"
                _ -> "badge-error"
              end}"}>
                <%= case agent.status do
                  :running -> "‚óè Running"
                  :idle -> "‚óã Idle"
                  :processing -> "‚óê Processing"
                  _ -> "‚óã " <> to_string(agent.status)
                end %>
              </span>
            </div>
            <div class="agent-meta">
              <span class="agent-type">
                <span class="meta-label">Type:</span>
                <%= agent.agent_type |> to_string() |> String.capitalize() %>
              </span>
            </div>
          </div>
          <div class="agent-arrow">‚Üí</div>
        </a>
      <% end %>
    <% end %>
  </div>
  
  <div class="section">
    <h2>üìñ Agent Types</h2>
    <div class="agent-types-grid">
      <div class="agent-type-card">
        <div class="type-icon">üéØ</div>
        <h3>PlannerAgent</h3>
        <p>Decomposes tasks and coordinates workers</p>
      </div>
      <div class="agent-type-card">
        <div class="type-icon">‚öôÔ∏è</div>
        <h3>WorkerAgent</h3>
        <p>Executes subtasks with LLM + tools</p>
      </div>
      <div class="agent-type-card">
        <div class="type-icon">üîç</div>
        <h3>CriticAgent</h3>
        <p>Evaluates results and provides feedback</p>
      </div>
      <div class="agent-type-card">
        <div class="type-icon">üíæ</div>
        <h3>MemoryAgent</h3>
        <p>Stores persistent memory for tasks</p>
      </div>
    </div>
  </div>
  
  <div class="actions-bar">
    <a href="/" class="btn btn-secondary">‚Üê Back to Dashboard</a>
    <a href="/tasks/new" class="btn btn-primary">‚ûï New Task</a>
  </div>
</div>

<style>
.page-header {
  text-align: center;
  margin-bottom: 2rem;
}

.page-header h1 {
  font-size: 2rem;
}

.agents-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
  gap: 1rem;
  margin-bottom: 2rem;
}

.agent-card {
  display: flex;
  align-items: center;
  gap: 1rem;
  padding: 1.25rem;
  text-decoration: none;
  color: var(--text-color);
  transition: all 0.3s ease;
}

.agent-card:hover {
  transform: translateY(-4px);
  border-color: var(--primary-color);
  box-shadow: 0 8px 30px rgba(99, 102, 241, 0.2);
}

.agent-card:hover .agent-arrow {
  transform: translateX(4px);
  opacity: 1;
}

.agent-icon {
  font-size: 2.5rem;
  width: 60px;
  height: 60px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, rgba(99, 102, 241, 0.2), rgba(139, 92, 246, 0.2));
  border-radius: 12px;
}

.agent-content {
  flex: 1;
}

.agent-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 0.5rem;
}

.agent-id {
  font-weight: 700;
  font-size: 1.1rem;
  font-family: 'JetBrains Mono', monospace;
}

.agent-meta {
  display: flex;
  gap: 1rem;
  font-size: 0.875rem;
  color: var(--text-secondary);
}

.meta-label {
  color: var(--text-muted);
}

.agent-arrow {
  font-size: 1.5rem;
  color: var(--primary-color);
  opacity: 0.5;
  transition: all 0.3s ease;
}

.section {
  margin-top: 2rem;
  padding-top: 2rem;
  border-top: 1px solid var(--border-color);
}

.agent-types-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 1rem;
  margin-top: 1rem;
}

.agent-type-card {
  background: var(--card-bg);
  border: 1px solid var(--border-color);
  border-radius: 12px;
  padding: 1.25rem;
  text-align: center;
  transition: all 0.3s ease;
}

.agent-type-card:hover {
  border-color: var(--primary-color);
}

.type-icon {
  font-size: 2rem;
  margin-bottom: 0.5rem;
}

.agent-type-card h3 {
  margin: 0 0 0.5rem 0;
  font-size: 1rem;
}

.agent-type-card p {
  margin: 0;
  font-size: 0.85rem;
  color: var(--text-secondary);
}

.actions-bar {
  display: flex;
  justify-content: center;
  gap: 1rem;
  margin-top: 2rem;
}

.empty-state {
  text-align: center;
  padding: 3rem;
  grid-column: 1 / -1;
}

.empty-state-icon {
  font-size: 3rem;
  margin-bottom: 1rem;
}

.empty-state p {
  color: var(--text-secondary);
  margin-bottom: 1rem;
}

@media (max-width: 768px) {
  .agents-grid {
    grid-template-columns: 1fr;
  }
  
  .agent-types-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}
</style>
