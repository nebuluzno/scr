<div class="container fade-in">
  <div class="page-header">
    <h1>üíæ Memory Storage</h1>
    <p class="subtitle">Persistent ETS-based storage for tasks and agent states</p>
  </div>
  
  <div class="memory-stats">
    <div class="stat-card">
      <div class="stat-icon">üìã</div>
      <div class="stat-value"><%= length(@tasks) %></div>
      <div class="stat-label">Tasks Stored</div>
    </div>
    <div class="stat-card">
      <div class="stat-icon">ü§ñ</div>
      <div class="stat-value"><%= length(@agents) %></div>
      <div class="stat-label">Agent States</div>
    </div>
  </div>
  
  <div class="memory-grid">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">üìã Tasks</h3>
        <span class="badge badge-info"><%= length(@tasks) %> items</span>
      </div>
      <div class="card-body">
        <%= if @tasks == [] do %>
          <div class="empty-state">
            <div class="empty-state-icon">üì≠</div>
            <p>No tasks stored</p>
          </div>
        <% else %>
          <div class="memory-list">
            <%= for task <- @tasks do %>
              <div class="memory-item">
                <div class="memory-header">
                  <span class="memory-id"><%= task.task_id %></span>
                  <span class="memory-type badge badge-info"><%= Map.get(task, :type, "task") %></span>
                </div>
                <div class="memory-content"><%= String.slice(to_string(task.description), 0, 100) %><%= if String.length(to_string(task.description)) > 100, do: "..." %></div>
                <%= if Map.get(task, :result) do %>
                  <div class="memory-result">
                    <strong>Result:</strong> <%= String.slice(inspect(task.result), 0, 150) %>...
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">ü§ñ Agent States</h3>
        <span class="badge badge-info"><%= length(@agents) %> items</span>
      </div>
      <div class="card-body">
        <%= if @agents == [] do %>
          <div class="empty-state">
            <div class="empty-state-icon">üëª</div>
            <p>No agent states stored</p>
          </div>
        <% else %>
          <div class="memory-list">
            <%= for {agent_id, state} <- @agents do %>
              <div class="memory-item">
                <div class="memory-header">
                  <span class="memory-id"><%= agent_id %></span>
                  <span class="badge badge-info">
                    <%= Map.get(state, :status, "unknown") %>
                  </span>
                </div>
                <div class="memory-meta">
                  <span>Type: <%= Map.get(state, :agent_type, "unknown") %></span>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  
  <div class="section">
    <h2>üìñ About Memory Storage</h2>
    <div class="info-cards">
      <div class="info-card">
        <h4>‚ö° ETS-Based</h4>
        <p>In-memory storage using Erlang Term Storage for fast access</p>
      </div>
      <div class="info-card">
        <h4>üîÑ Persistent</h4>
        <p>Survives agent crashes and restarts via supervision</p>
      </div>
      <div class="info-card">
        <h4>üîç Queryable</h4>
        <p>All stored data can be retrieved by agents during execution</p>
      </div>
    </div>
  </div>
  
  <div class="actions-bar">
    <a href="/" class="btn btn-secondary">‚Üê Back to Dashboard</a>
  </div>
</div>

